{{!-- This creates all the html for the page --}}
<div class="container text-center">
    <div class="row text-center">
        <div class="col-12">
            <h1>Eat-Da-Burger!</h1>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-12">
            <h2>Add a Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="burger">Burger Name:</label>
                    <input type="text" id="burger" name="name">
                </div>

                <button class="btn btn-add" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h2 class="text-center">Burgers To Eat</h2>
            {{!-- For each burger if its not devoured than display it here --}}
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burgers-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h2 class="text-center">Burgers Eaten</h2>
            <ul class="text-center">
                {{!-- For each burger if it is devoured than display it here --}}
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burgers-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>